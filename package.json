{
  "name": "tomato-mien",
  "private": true,
  "version": "2.1.1",
  "workspaces": [
    "packages/*"
  ],
  "description": "Simple rule-based alarm app",
  "author": "Einere",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "https://einere.github.io/tomato-mien/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Einere/tomato-mien.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:mas": "npm run build && electron-builder --mac mas",
    "electron:mas:dist": "npm run build && electron-builder --mac mas --publish=never",
    "docs:dev": "npm run dev -w @tomato-mien/docs",
    "docs:build": "npm run build -w @tomato-mien/docs",
    "test": "npx vitest run"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@tomato-mien/design-tokens": "*",
    "@tomato-mien/ui": "*",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "concurrently": "^9.2.1",
    "dayjs": "^1.11.19",
    "dexie": "^4.3.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.4.0",
    "jotai": "^2.17.1",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.11",
    "vite-plugin-prettier": "^0.0.6",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.1",
    "zod": "^4.3.6"
  },
  "build": {
    "appId": "com.tomato-mien.app",
    "productName": "Tomato Mien",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!src/**/*",
      "!*.md",
      "!*.json",
      "!vite.config.ts",
      "!tailwind.config.js",
      "!postcss.config.js",
      "!tsconfig.json",
      "!.eslintrc.cjs",
      "!.prettierrc"
    ],
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mas": {
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "entitlementsLoginHelper": "build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "mas",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Einere",
      "repo": "tomato-mien",
      "releaseType": "release"
    }
  },
  "packageManager": "npm@10.9.2"
}
